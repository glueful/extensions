{
    "name": "glueful/rbac-extension",
    "description": "Role-Based Access Control extension for Glueful",
    "type": "glueful-extension",
    "license": "MIT",
    "version": "1.0.0",
    "authors": [
        {
            "name": "Glueful Team"
        }
    ],
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "Glueful\\Extensions\\RBAC\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Glueful\\Extensions\\RBAC\\Tests\\": "tests/"
        }
    },
    "extra": {
        "glueful": {
            "extension": "RBAC",
            "bootstrap": "./RBAC.php",
            "config": "config/rbac.php"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "analyse": "phpstan analyse src tests --level=8"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}